{{#with assets}}

<!-- left column -->
<div class="wr-left asset-summary">

    <!-- left nav -->
    <div class="wr-left-nav">
        <h2 class="asset-overview">Asset Overview</h2>
        <div class="ctrl-connector">
              <img src='{{url ""}}/storage/{{../rxt.shortName}}/{{id}}/{{thumbnail}}' class="" alt="Thumb"/>
        </div><br class="c-both" />
        <h4>{{name}}</h4>


        <p class="t-asset-ver">{{tables.0.fields.version.value}}</p>
        <p>{{tables.0.fields.description.value}}</p>

    </div>
    <!-- /left nav -->

</div>
<!-- /left column -->

<!-- right column -->
<div class="wr-right">


    <div class='content-div'>
        <div class="tab-content asset-tab-content">
            <div id="view" class="asset-view-container">


                <div>
                    <ul class="nav nav-list widget wlightblue">
                        {{#if existingConnections}}

                            <li class="">
                            <div class="widget-head">
                                Existing Connections
                            </div>
                        </li>

                            {{#each existingConnections}}
                            <li>
                                <!--<a href="#">Hello</a>-->
                                <div class="conns">


                                    <a href="{{../returnRecipeUri}}&value={{this}}">

                                        {{this}}

                                    </a>
                                    <div>

                                        <form action="{{url ""}}/apis/deleteAccount?type=connection&accountId={{this}}&id={{../id}}"  id="form-delete" method="post" role="form">
                                            <button class="btn btn-danger pull-right" >
                                                Delete
                                            </button>
                                        </form>
                                    </div>

                                </div>
                            {{/each}}
                        {{/if}}

                    </ul>
                </div>

                <div class="clearfix" style="height:30px;"></div>

                <form action="{{url ""}}/apis/{{name}}OAuth?type=connection&id={{id}}"   method="post" role="form" class="form-horizontal">

                    <button type="submit" class="btn btn-primary btn-large">OAuth Connection</button>
                </form>


            </div>
        </div>
    </div>


{{/with}}



</div>
<!-- /right column -->






