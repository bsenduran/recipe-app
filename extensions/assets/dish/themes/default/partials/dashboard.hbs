<div class="asset-being-added">
</div>
<div class="asset-thumb-container">

        <div class="row-fluid">

            <div></div>
            <!-- List dishes -->
            <div class="span12"><blockquote><h3>My Dishes</h3></blockquote></div>

            <div class="row-fluid span11" style="height: 500px;  overflow-y: auto;">

                {{#if assets}}

                <ul class="thumbnails">

                <div></div>

                {{#each assets}}

                <li class="span2">

                    <div class="thumbnail" style=" height: 180px;">
                        <div style="height: 12px;">
                            <small><i class="pull-right icon-circle lc-state-{{this.lifecycleState}}" title="{{this.lifecycleState}}"></i></small>
                        </div>
                        <div style="height: 128px;">
                            <img src='{{this.attributes.overview_thumbnail}}' alt="...">
                        </div>
                        <p>    <b>
                            <a href='{{url ""}}/asts/{{../rxt/shortName}}/details/{{this.id}}' id='titleText' title="{{this.attributes.overview_name}}">
                                <script>
                                    var str = "{{this.attributes.overview_name}}";
                                    if(str.length>30)
                                     {
                                        str = str.substring(0, 40) + '...';
                                     }
                                     else{
                                        str += '<br/>';
                                     }
                                    document.write(str);
                                </script>

                            </a>
                        </b>    </p>
                    </div>

                </li>


                {{/each}}

                </ul>

            </div>

            {{/if}}

            <div class="span12"></div>

            <!-- Listing connections -->
            <div class="span12"><blockquote><h3>My Connections</h3></blockquote></div>

            <div class="row-fluid span11" style="height: 500px;  overflow-y: auto;">

            {{#if connectionAssets}}

            <ul class="thumbnails">

                <div></div>

                {{#each connectionAssets}}

                <li class="span2">

                    <div class="thumbnail" style=" height: 180px;">
                        <div style="height: 12px;">

                        </div>
                        <div style="height: 128px;">
                            <img src='{{url ""}}/storage/connection/{{id}}/{{this.attributes.images_thumbnail}}' alt="...">
                        </div>
                        <p>    <b>
                            <a href='{{url ""}}/asts/connection/details/{{this.id}}' id='titleText'>
                                {{this.attributes.overview_name}}
                            </a>
                        </b>    </p>
                    </div>
                </li>

                {{/each}}

            </ul>

            {{/if}}

            </div>

            <div class="span12">
                <div class="span12"></div>
                <a href="{{url ""}}/../store" class="btn btn-large btn-primary span3">
                    <div class="pull-left">
                        <i class="icon-shopping-cart icon-white"></i>&nbsp;
                        Go to recipe store
                    </div>
                </a>
            </div>

            <div class="span12"></div>

        </div>




</div>

