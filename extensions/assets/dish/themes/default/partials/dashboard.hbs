<div class="asset-being-added">
</div>
<div class="asset-thumb-container">

        <div class="row-fluid">

            <div></div>
            <!-- List dishes -->
            <div class="span12"><blockquote><h3>My Dishes</h3></blockquote></div>

            <div class="row-fluid span11" style="height: 500px;  overflow-y: auto;">

                {{#if assets}}

                <ul class="thumbnails">

                <div></div>

                {{#each assets}}

                <li class="span2">

                    <div class="thumbnail" style=" height: 180px;">
                        <div style="height: 12px;">
                            <small><i class="pull-right icon-circle lc-state-{{this.lifecycleState}}"></i></small>
                        </div>
                        <div style="height: 128px;">
                            <img src='{{url ""}}/storage/{{../rxt.shortName}}/{{id}}/{{this.attributes.images_thumbnail}}' alt="...">
                        </div>
                        <p>    <b>
                            <a href='{{url ""}}/asts/{{../rxt/shortName}}/details/{{this.id}}' id='titleText'>
                                <script>
                                    var str = "{{this.attributes.overview_name}}";
                                    if(str.length>30)
                                     {
                                        str = str.substring(0, 40) + '...';
                                     }
                                     else{
                                        str += '<br/>';
                                     }
                                    document.write(str);
                                </script>

                            </a>
                        </b>    </p>
                    </div>

                </li>


                {{/each}}

                </ul>

            </div>

            {{/if}}

            <!-- Listing connections -->
            <div class="span12"><blockquote><h3>My Connections</h3></blockquote></div>

            <div class="row-fluid span11" style="height: 500px;  overflow-y: auto;">

            {{#if connectionAssets}}

            <ul class="thumbnails">

                <div></div>

                {{#each connectionAssets}}

                <li class="span2">

                    <div class="thumbnail" style=" height: 180px;">
                        <div style="height: 12px;">

                        </div>
                        <div style="height: 128px;">
                            <img src='{{url ""}}/storage/connection/{{id}}/{{this.attributes.images_thumbnail}}' alt="...">
                        </div>
                        <p>    <b>
                            <a href='{{url ""}}/asts/connection/details/{{this.id}}' id='titleText'>
                                <script>
                                    var str = "{{this.attributes.overview_name}}";
                                    if(str.length>30)
                                     {
                                        // Limit name only for 40 characters
                                        str = str.substring(0, 40) + '...';
                                     }
                                     else{
                                        str += '<br/>';
                                     }
                                    document.write(str);
                                </script>

                            </a>
                        </b>    </p>
                    </div>
                </li>

                {{/each}}

            </ul>

        {{/if}}

            </div>

        </div>




</div>

