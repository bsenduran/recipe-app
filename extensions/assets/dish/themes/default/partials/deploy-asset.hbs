<div id="rec-div" class="container">
    <h2>Let's Make This Happen!</h2> <br/>

 <form class="form-horizontal well span8" method='post' action='{{url ""}}/apis/assets/{{assets.id}}?type=dish' id="form-update" data-redirect-url='{{url "/asts/dish/dashboard"}}'>
        <div class="control-group">
            <label class="control-label" for="dishName">Dish Name</label>
            <div class="controls">
                <input type="text" id="dishName" name ="overview_name" value ="{{assets.name}}">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="triggerInterval">Triggering Period / Cron</label>
            <div class="controls">
                <input type="text" id="triggerInterval">
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <button class="btn btn-primary btn-large" onclick="deployArtifacts('{{assets.tables.0.fields.url.value}}', '{{assets.tables.0.fields.name.value}}')">Complete!</button>
            </div>
        </div>
    </form>


    <!-- Bottom Nav-bar -->
    <ul class="pager span8 well well-small">
        <li class="previous">
            <a href="/recipe-app/asts/dish/set_process/{{assets.id}}">&larr; Previous</a>
        </li>
    </ul>

    <script>
        var leftPaneItem = document.querySelectorAll("ul.nav-list li")[4];
        leftPaneItem.style.backgroundColor="gainsboro";
    </script>

    <script>
        function deployArtifacts(url, name){
            var interval = jQuery('#triggerInterval').val();
            jQuery.post('/recipe-app/asts/dish/artifact_deploy', {"overview_url":url, "overview_name": name, "interval": interval})
            .done(function( data ) {

                alert( "Dish Diployed " );

                window.location.href = "{{url "/asts/dish/dashboard"}}";
            });
        }
    </script>
</div>




