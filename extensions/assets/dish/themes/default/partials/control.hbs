


            <h3 class="h-left-nav-title">Dish Control Panel</h3>
            <!--p><strong>TIP:</strong> Activating/De-activating</p-->

             <div class="hr-sep-2">&nbsp;</div>
            <div ><a href="/recipe-app/asts/dish/details/{{assets.id}}" type="button" class="btn-configure">Configure</a></div>
            <div class="btn-group-x">
            {{#if assets.isTaskRunning}}
                <button class="btn-action btn-alt-actions btn-activated" id="btn-deactivate" type="button" onclick="confirm_deactivate('{{assets.name}}', '{{assets.id}}');">Deactivate</button>
            {{else}}
                <button class="btn-action btn-alt-actions btn-deactivated" id="btn-activate" type="button" onclick="confirm_activate('{{assets.name}}', '{{assets.id}}');">Activate</button>
            {{/if}}
            <button class="btn-action btn-alt-actions btn-delete-cp" id="btn-activate" type="button" onclick="confirm_delete('{{assets.name}}', '{{assets.id}}');">Delete</button>
            </div>



<script>
var confirm_activate = function(name, id) {
    bootbox.confirm("<p> Are you sure </p> <p>Do you want to Activate the Dish</p>" , function (result) {

        if(result) {
            window.location.href = "/recipe-app/apis/manage_task/activate?type=dish&dishName="+name+"&id="+id;
        }
    });
};

var confirm_deactivate = function(name, id) {
    bootbox.confirm("<p>Are you sure </p><p>Do you want to Deactivate the Dish</p>" , function (result) {

        if(result) {
            window.location.href = "/recipe-app/apis/manage_task/deactivate?type=dish&dishName="+name+"&id="+id;
        }
    });
};

var confirm_delete = function(name, id) {
    bootbox.confirm("<p>Are you sure </p><p>Do you want to Delete the Dish</p>" , function (result) {

        if(result) {
            window.location.href = "/recipe-app/apis/manage_task/delete?type=dish&dishName="+name+"&id="+id;
        }
    });
};
</script>
